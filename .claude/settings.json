{
	"permissions": {
		"allow": [
			"Bash(bun test:*)",
			"Bash(bun run:*)",
			"Bash(./dist/main.js:*)",
			"Bash(git add:*)",
			"Bash(git commit:*)",
			"mcp__zen",
			"Bash(mkdir:*)",
			"Bash(grep:*)",
			"Bash(find:*)",
			"Bash(printenv)",
			"Bash(git --help)",
			"WebFetch(domain:docs.anthropic.com)"
		],
		"deny": []
	},
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Write|Edit|MultiEdit",
				"hooks": [
					{
						"type": "command",
						"command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-fix.sh",
						"timeout": 30
					}
				]
			}
		]
	}
}
